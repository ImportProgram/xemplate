{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true
    },
    "typeRoots": ["./types", "node_modules/@types"],
    "include": ["./src"],
    "exclude": ["node_modules"]
}
